<h2>What can we do for you {{yourName}} ? &#9786 </h2>


<div class="container form">

<%= flash[:notice] %>

<%= form_tag ("/static_pages/thank_you") do %>
<div class="row">
  <div class="col-md-5 col-md-offset-3">
    <div class"form-group">
      <%= label_tag :name, "Name" %>
      <%= text_field_tag :name, nil, class: "form-control",placeholder: "Your Name", data: { 'ng-model' => 'yourName' }%>
    </div><br>
    <div class="form-group">
      <%= label_tag :email, "Email Adress" %>
      <%= text_field_tag :email, nil, class: "form-control", placeholder: "Your Email" %>
    </div>
    <div class="form-group">
      <%= label_tag :message, "Message" %>
      <%= text_area_tag :message, nil, class: "form-control", placeholder: "Space for your Message" %>
    </div>
    <%= submit_tag "Send" %>
    <% end %>
  </div>
</div>

</div>