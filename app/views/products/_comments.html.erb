<div class="product-reviews">
    <% @comments.each do |comment| %>
        <div class="row comment-container">
            <hr>
            <p><%= comment.user.first_name %>  <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small>
            </p>
            <p><%= "Rating: #{comment.rating}/5" %></p>
            <div class="rated" data-score="<%= comment.rating %>"></div>
            <p><%= comment.body %></p>
            <% if signed_in? && current_user.admin %>
 
               <%= link_to product_comment_path(@product, comment), method: :delete, remote: true, class: 'delete-product-comment', data: {confirm: 'Are you sure?'} do %>
 
                  <span class="glyphicon glyphicon-remove"></span>
 
              <% end %>
 
            <% end %>
        </div>
    <% end %>
</div>
