<header> 

  <h2> Our Products</h2>

</header>

<div class="container">

  <div class="row">

	  <% cache(cache_key_for_products) do %>
	      <% @products.each do |product| %>
	        <% cache (product) do %>
	          <%= render product %>
	          <% end %>
	      <% end %>
	  <% end %>
  </div>
  
<br>

<%= link_to 'New Product', new_product_path %>

</div>